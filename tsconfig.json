{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "demo",
    "dist",
    "src/**/*.spec.ts"
  ],
  "baseUrl": "./src",
  "angularCompilerOptions": {
    "genDir": "dist",
    "debug": false,
    "skipMetadataEmit" : false,
    "strictMetadataEmit": false
  }
}
